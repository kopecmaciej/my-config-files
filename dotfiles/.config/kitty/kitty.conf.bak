# BEGIN_KITTY_THEME
# Dimmed Monokai
include current-theme.conf
# END_KITTY_THEME
allow_remote_control yes
enable_audio_bell no

draw_minimal_borders yes 
hide_window_decorations titlebar-only
window_border_width 1.0pt
window_padding_width 1
# active_border_color #696969
# inactive_border_color #000000

map shift+F3 launch --location=hsplit 

font_size 12

map ctrl+shift+enter launch --cwd=current
map ctrl+shift+t launch --type=tab --cwd=current

map ctrl+shift+down previous_window
map ctrl+shift+up next_window

# map kitty_mod+enter launch sh -c "bash && source ~/.bash_it/bash_it.sh" --cwd=current 
# map kitty_mod+t     new_tab_with_cwd sh -c "bash && source ~/.bash_it/bash_it.sh"

